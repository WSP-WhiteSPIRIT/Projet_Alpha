<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="Alpha_ProjectPersistence" transaction-type="JTA">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jta-data-source>db_alpha</jta-data-source>
        <class>alpha.entite.model.Administrateur</class>
        <class>alpha.entite.model.Categorie</class>
        <class>alpha.entite.model.Client</class>
        <class>alpha.entite.model.ClientEntreprise</class>
        <class>alpha.entite.model.ClientParticulier</class>
        <class>alpha.entite.model.DepartementFrance</class>        
        <class>alpha.entite.model.Marque</class>
        <class>alpha.entite.model.Modele</class>
        <class>alpha.entite.model.Forfait</class>
        <class>alpha.entite.model.Reparateur</class>
        <class>alpha.entite.model.Devis</class>
        <class>alpha.entite.model.ParticulierEntreprise</class>
        <class>alpha.entite.model.Reparation</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/db_alpha"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="javax.persistence.schema-generation.database.action" value="create"/>
        </properties>
    </persistence-unit>
</persistence>
